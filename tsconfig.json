{
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["ESNext"],
    "target": "ESNext",
    "rootDirs": ["src"],
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
